<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profile_backimg"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/arrowback"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:gravity="center"
            android:fontFamily="@font/cc_semibold"
            android:textSize="@dimen/_16ssp"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/profile_edit"/>

        <TextView
            android:id="@+id/profile_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@android:color/white"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/_14ssp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="?attr/selectableItemBackground"/>

        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_profileimg"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/designerimg"
            android:layout_gravity="center"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/profile_cameraimg"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/cameraicon"
            android:layout_alignBottom="@id/profile_profileimg"
            android:layout_alignEnd="@id/profile_profileimg" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_4sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_4sdp"/>

            <TextView
                android:id="@+id/profile_txtname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vishal Kumavat"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorverydarkgrey"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Branch"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_4sdp"/>

            <TextView
                android:id="@+id/profile_txtbranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Computer Science &amp; Engineering"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorverydarkgrey"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Semester"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_4sdp"/>

            <TextView
                android:id="@+id/profile_txtsem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IV SEMESTER"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorverydarkgrey"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email-id"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_4sdp"/>

            <TextView
                android:id="@+id/profile_txtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vishal6kumavat7@gmail.com"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorverydarkgrey"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone/mob no."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_4sdp"/>

            <TextView
                android:id="@+id/profile_txtmob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7239973921"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorverydarkgrey"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>