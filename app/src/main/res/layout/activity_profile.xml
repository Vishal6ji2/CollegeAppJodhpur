<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:navigationIcon="@drawable/arrowback"
            app:title="Profile"
            app:titleTextColor="@android:color/white"
            app:titleTextAppearance="@style/titlestyle"/>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_4sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_cardprofileimg"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    app:cardCornerRadius="@dimen/_50sdp"
                    android:layout_centerHorizontal="true">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profile_profileimg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorlightgray"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profilefive"
                        android:transitionName="profileimg"
                        android:layout_centerInParent="true"/>

                </androidx.cardview.widget.CardView>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/profile_cameraimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@android:color/white"
                    android:src="@drawable/editicon"
                    app:fabSize="mini"
                    android:layout_alignBottom="@id/profile_cardprofileimg"
                    android:layout_alignEnd="@id/profile_cardprofileimg"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/colorverydarkgrey"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_4sdp"/>

            <TextView
                android:id="@+id/profile_txtname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vishal Kumavat"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/profile_txtreg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration No."
                android:textColor="@color/colorverydarkgrey"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_4sdp"/>

            <TextView
                android:id="@+id/profile_txtregno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="J19U939598"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Branch"
                android:textColor="@color/colorverydarkgrey"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_4sdp"/>

            <TextView
                android:id="@+id/profile_txtbranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Computer Science &amp; Engineering"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/profile_txteditemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email-id"
                android:textColor="@color/colorverydarkgrey"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_4sdp"
                app:drawableEndCompat="@drawable/editicon" />

            <TextView
                android:id="@+id/profile_txtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vishal6kumavat7@gmail.com"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/profile_txteditmob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone/mob no."
                android:textColor="@color/colorverydarkgrey"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_4sdp"
                app:drawableEndCompat="@drawable/editicon" />

            <TextView
                android:id="@+id/profile_txtmob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+917239973921"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>