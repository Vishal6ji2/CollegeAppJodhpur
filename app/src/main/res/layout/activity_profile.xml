<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profile_backimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrowbackblack"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:gravity="center"
            android:fontFamily="@font/cc_semibold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/profile_edit"/>

        <TextView
            android:id="@+id/profile_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@android:color/black"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="?attr/selectableItemBackground"/>

        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_profileimg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/designerimg"
            android:layout_gravity="center"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/profile_cameraimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cameraicon"
            android:layout_alignBottom="@id/profile_profileimg"
            android:layout_alignEnd="@id/profile_profileimg"
            />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/profile_txtname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vishal Kumavat"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="@color/colorverydarkgrey"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Branch"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/profile_txtbranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Computer Science &amp; Engineering"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="@color/colorverydarkgrey"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Semester"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/profile_txtsem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IV SEMESTER"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="@color/colorverydarkgrey"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email-id"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/profile_txtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vishal6kumavat7@gmail.com"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="@color/colorverydarkgrey"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone/mob no."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/profile_txtmob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7239973921"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="@color/colorverydarkgrey"/>

        </LinearLayout>


</LinearLayout>