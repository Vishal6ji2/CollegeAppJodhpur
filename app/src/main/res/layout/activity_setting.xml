<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SettingActivity"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/setting_toolbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrowbackblack"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textSize="18sp"
            android:fontFamily="@font/cc_semibold"
            android:textColor="@android:color/black"
            android:gravity="center"/>

    </com.google.android.material.appbar.MaterialToolbar>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Account"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:padding="10dp"/>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/setting_profileimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/musicianimg"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mute Notifications"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="@color/colordarkgrey"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All"
        android:padding="10dp"
        android:textSize="16sp"
        android:checked="true"
        android:textColor="@color/colorverydarkgrey"/>


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Department chat"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorverydarkgrey"/>


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="College chat"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorverydarkgrey"/>


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notice"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorverydarkgrey"
        android:checked="true"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="News feed"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorverydarkgrey"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Placement news"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorverydarkgrey"/>




</LinearLayout>