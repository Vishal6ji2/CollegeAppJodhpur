<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp">

     <ImageView
         android:layout_width="@dimen/_50sdp"
         android:layout_height="@dimen/_50sdp"
         android:src="@drawable/pdficon"
         android:id="@+id/customsyllabus_pdficon"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/_5sdp"
        android:layout_toEndOf="@id/customsyllabus_pdficon">

    <TextView
        android:id="@+id/customsyllabus_pdfname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BE Computer Science &amp; Engineering"
        android:textColor="@color/colorverydarkgrey"
        android:textSize="@dimen/_14ssp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_toEndOf="@id/customsyllabus_pdficon"
        android:layout_centerVertical="true"/>

    </androidx.cardview.widget.CardView>


</RelativeLayout>