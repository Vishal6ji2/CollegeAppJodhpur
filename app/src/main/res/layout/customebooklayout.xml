<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:background="?attr/selectableItemBackground">


        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/custombook_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/designerimg"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="5dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#16000000">

                <TextView
                    android:id="@+id/custombook_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bookname"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/cc_bold"/>

                <TextView
                    android:id="@+id/custombook_edition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="bookedition"
                    android:textSize="15sp"
                    android:textColor="@color/colordarkgrey"
                    android:layout_marginStart="10dp"
                    android:textStyle="italic"
                    android:fontFamily="@font/cc_medium"/>

                <TextView
                    android:id="@+id/custombook_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="bookauthor"
                    android:textSize="15sp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/cc_regular"
                    android:textColor="@color/colordarkgrey"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>