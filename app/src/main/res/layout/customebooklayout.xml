<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="@dimen/_10sdp"
    android:background="?attr/selectableItemBackground">


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_75sdp"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_3sdp">

            <ImageView
                android:id="@+id/custombook_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/designerimg"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorlightgray"
                android:gravity="center">

                <TextView
                    android:id="@+id/custombook_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bookname"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/cc_bold"/>

                <TextView
                    android:id="@+id/custombook_edition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="bookedition"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/colordarkgrey"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:textStyle="italic"
                    android:fontFamily="@font/cc_medium"/>

                <TextView
                    android:id="@+id/custombook_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="bookauthor"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/cc_regular"
                    android:textColor="@color/colordarkgrey"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>