<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true">
    

    <RelativeLayout
        android:id="@+id/navigation_prolayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark">


        <androidx.cardview.widget.CardView
            android:id="@+id/navigation_card"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/navigation_profileimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/designerimg"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/navigation_card"
            android:layout_toStartOf="@id/navigation_viewimg">

            <TextView
                android:id="@+id/navigation_profilename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vishal Kumavat"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/navigation_branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BE CSE III SEM"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/navigation_viewimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrowforwardicon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/navigation_optlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@id/navigation_prolayout">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/navigation_homelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/navigation_homeimg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/homeicon"
                android:layout_centerVertical="true"
                android:layout_alignBottom="@id/navigation_txthome"
                android:layout_alignTop="@id/navigation_txthome"/>

            <TextView
                android:id="@+id/navigation_txthome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/navigation_homeimg"
                android:layout_marginStart="20dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/navigation_newslayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/navigation_homelayout"
            android:padding="10dp">

            <ImageView
                android:id="@+id/navigation_newsimg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/newsicon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/navigation_txtnews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="News feed"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/navigation_newsimg"
                android:layout_marginStart="20dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/navigation_placementlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/navigation_newslayout"
            android:padding="10dp">

            <ImageView
                android:id="@+id/navigation_placementimg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/selectedplacementicon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/navigation_txtplacement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placement news"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/navigation_placementimg"
                android:layout_marginStart="20dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/navigation_noticelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/navigation_placementlayout"
            android:padding="10dp">

            <ImageView
                android:id="@+id/navigation_noticeimg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/noticeboardicon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/navigation_txtnotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notice board"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/navigation_noticeimg"
                android:layout_marginStart="20dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/navigation_ebooklayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/navigation_noticelayout"
            android:padding="10dp">

            <ImageView
                android:id="@+id/navigation_ebookimg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ebookicon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/navigation_txtebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ebooks library"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/navigation_ebookimg"
                android:layout_marginStart="20dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/navigation_paperlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/navigation_ebooklayout"
            android:padding="10dp">

            <ImageView
                android:id="@+id/navigation_paperimg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/papericon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/navigation_txtpaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Syllabus &amp; papers"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/navigation_paperimg"
                android:layout_marginStart="20dp"/>

        </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@id/navigation_optlayout"
        android:layout_margin="10dp">

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/navigation_signlayout"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/navigation_aboutlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/navigation_signoutlayout"
            android:padding="10dp">

        <ImageView
            android:id="@+id/navigation_aboutimg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/aboutusicon"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/navigation_txtabout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About us"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/navigation_aboutimg"
            android:layout_marginStart="20dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/navigation_signoutlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp">

        <ImageView
            android:id="@+id/navigation_signoutimg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/logouticon"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/navigation_txtsignout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign out"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/navigation_signoutimg"
            android:layout_marginStart="20dp"/>

        </RelativeLayout>

    </RelativeLayout>

    </LinearLayout>

</RelativeLayout>