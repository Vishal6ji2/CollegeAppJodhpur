<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true">


    <LinearLayout
        android:id="@+id/navigation_prolayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/navigation_cardprofileimg"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:cardCornerRadius="@dimen/_25sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/navigation_profileimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profilefive"
                android:scaleType="centerCrop"
                android:transitionName="profileimg"
                android:background="@color/mixwhitecolor"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/navigation_profilename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vishal Kumavat"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/navigation_branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CSE"
                android:maxLines="2"
                android:textColor="@color/mixwhitecolor"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navigation_prolayout">

        <LinearLayout
            android:id="@+id/navigation_optlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/navigation_txtlink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Important links"
                android:textColor="@color/colorverydarkgrey"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_7sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:drawableStartCompat="@drawable/linkicon"
                tools:ignore="HardcodedText"
                android:background="?attr/selectableItemBackground"/>


            <TextView
                android:id="@+id/navigation_txtebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ebook library"
                android:textColor="@color/colorverydarkgrey"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_7sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:drawableStartCompat="@drawable/ebookicon"
                tools:ignore="HardcodedText"
                android:background="?attr/selectableItemBackground"/>


            <TextView
                android:id="@+id/navigation_txtpaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Syllabus &amp; papers"
                android:textColor="@color/colorverydarkgrey"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_7sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:drawableStartCompat="@drawable/papericon"
                tools:ignore="HardcodedText"
                android:background="?attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/navigation_txttimetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time-table"
                android:textColor="@color/colorverydarkgrey"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_7sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                tools:ignore="HardcodedText"
                app:drawableStartCompat="@drawable/timetablesicon"
                android:background="?attr/selectableItemBackground"/>


            <TextView
                android:id="@+id/navigation_txtshare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share via"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/colorverydarkgrey"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                tools:ignore="HardcodedText"
                app:drawableStartCompat="@drawable/shareicon"
                android:background="?attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/navigation_txtsetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/colorverydarkgrey"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:drawableStartCompat="@drawable/settingicon"
                tools:ignore="HardcodedText"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/navigation_txtcontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact us"
            android:textColor="@color/colorverydarkgrey"
            android:textSize="@dimen/_13ssp"
            android:padding="@dimen/_7sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            app:drawableStartCompat="@drawable/callicon"
            android:background="?attr/selectableItemBackground"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/navigation_txtabout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About us"
            android:textColor="@color/colorverydarkgrey"
            android:textSize="@dimen/_13ssp"
            android:padding="@dimen/_7sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginStart="@dimen/_5sdp"
            app:drawableStartCompat="@drawable/aboutusicon"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/navigation_txtsignout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign out"
            android:textColor="@color/colorverydarkgrey"
            android:textSize="@dimen/_13ssp"
            android:padding="@dimen/_7sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginStart="@dimen/_5sdp"
            tools:ignore="HardcodedText"
            app:drawableStartCompat="@drawable/logouticon" />

    </LinearLayout>

</RelativeLayout>