<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true">
    

    <RelativeLayout
        android:id="@+id/navigation_prolayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/navigation_card"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/navigation_profileimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/designerimg"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/navigation_card"
            android:layout_toStartOf="@id/navigation_viewimg">

            <TextView
                android:id="@+id/navigation_profilename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vishal Kumavat"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/navigation_branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BE CSE III SEM"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/navigation_viewimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrowforwardicon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/navigation_optlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@id/navigation_prolayout">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <RelativeLayout
            android:id="@+id/navigation_ebooklayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/navigation_homeimg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ebookicon"
                android:layout_centerVertical="true"
                android:layout_alignBottom="@id/navigation_txthome"
                android:layout_alignTop="@id/navigation_txthome"/>

            <TextView
                android:id="@+id/navigation_txthome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ebook library"
                android:textColor="@color/colorverydarkgrey"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/navigation_homeimg"
                android:layout_marginStart="20dp"/>

        </RelativeLayout>

            <RelativeLayout
            android:id="@+id/navigation_syllabuspaperlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/navigation_ebooklayout"
            android:padding="10dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/navigation_newsimg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/papericon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/navigation_txtnews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Syllabus &amp; papers"
                android:textColor="@color/colorverydarkgrey"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/navigation_newsimg"
                android:layout_marginStart="20dp"/>

        </RelativeLayout>

            <RelativeLayout
            android:id="@+id/navigation_ttlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/navigation_syllabuspaperlayout"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp">

            <ImageView
                android:id="@+id/navigation_noticeimg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/timetablesicon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/navigation_txtnotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time-table"
                android:textColor="@color/colorverydarkgrey"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/navigation_noticeimg"
                android:layout_marginStart="20dp"/>

        </RelativeLayout>

            <RelativeLayout
            android:id="@+id/navigation_sharelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/navigation_ttlayout"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp">

            <ImageView
                android:id="@+id/navigation_paperimg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/shareicon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/navigation_txtpaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share via"
                android:textColor="@color/colorverydarkgrey"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/navigation_paperimg"
                android:layout_marginStart="20dp"/>

        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/navigation_settinglayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/navigation_sharelayout"
                android:background="?attr/selectableItemBackground"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/navigation_settingimg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/settingicon"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/navigation_txtsetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="@color/colorverydarkgrey"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/navigation_settingimg"
                    android:layout_marginStart="20dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@id/navigation_optlayout"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/navigation_signlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/navigation_contactlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/navigation_aboutlayout"
                android:padding="10dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/navigation_ebookimg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/callicon"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/navigation_txtebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact us"
                    android:textColor="@color/colorverydarkgrey"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/navigation_ebookimg"
                    android:layout_marginStart="20dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/navigation_aboutlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/navigation_signoutlayout"
                android:padding="10dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/navigation_aboutimg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/aboutusicon"
                    android:layout_centerVertical="true"/>


                <TextView
                    android:id="@+id/navigation_txtabout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About us"
                    android:textColor="@color/colorverydarkgrey"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/navigation_aboutimg"
                    android:layout_marginStart="20dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/navigation_signoutlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="10dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/navigation_signoutimg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/logouticon"
                    android:layout_centerVertical="true"/>


                <TextView
                    android:id="@+id/navigation_txtsignout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign out"
                    android:textColor="@color/colorverydarkgrey"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/navigation_signoutimg"
                    android:layout_marginStart="20dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>