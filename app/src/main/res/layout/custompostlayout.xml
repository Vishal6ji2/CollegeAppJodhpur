<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/_3sdp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zolad.zoominimageview.ZoomInImageView
            android:id="@+id/custompost_postimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/_250sdp"
            android:minHeight="@dimen/_150sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/directorimg"/>

        <TextView
            android:id="@+id/custompost_posttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/11/1998"
            android:background="@drawable/roundtext"
            android:textColor="@android:color/black"
            android:padding="@dimen/_4sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:elevation="@dimen/_5sdp"
            android:layout_alignBottom="@id/custompost_postimg"
            android:layout_alignEnd="@id/custompost_postimg"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/custompost_txtheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regarding BE semester"
            android:textSize="@dimen/_14ssp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:padding="@dimen/_8sdp"
            android:maxLines="2"
            android:layout_below="@id/custompost_postimg"/>

        <TextView
            android:id="@+id/custompost_txtdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hide_bottom_view_view_on_scroll_behaviorhide_bottom_view_on_scroll_behaviorhide_bottom_view_on_scroll_behaviorhide_bottom_view_on_scroll_behaviorhide_bottom_view_on_scroll_behaviorhide_bottom_view_on_scroll_behaviorhide_bottom_view_on_scroll_behaviorhide_bottom_view_on_scroll_behaviorhide_bottom_view_on_scroll_behaviorhide_bottom_view_on_scroll_behaviorhide_bottom_view_on_scroll_behavior"
            android:textColor="@color/colorverydarkgrey"
            android:padding="@dimen/_8sdp"
            android:textSize="@dimen/_12ssp"
            android:autoLink="all"
            android:textIsSelectable="true"
            android:justificationMode="inter_word"
            android:layout_below="@id/custompost_txtheading"
            tools:targetApi="o"/>

        <TextView
            android:id="@+id/custompost_txtmore"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorlightgray"
            android:layout_below="@id/custompost_txtdetails"
            android:layout_margin="@dimen/_2sdp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/custompost_txtmore"
            android:padding="@dimen/_4sdp">


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/custompost_profileimg"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/mbmlogo"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/custompost_profilename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mukesh Singhvi MBM"
                android:layout_gravity="center"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_12ssp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/custompost_profileimg"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/custompost_timeago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h ago"
                android:textSize="@dimen/_11ssp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>