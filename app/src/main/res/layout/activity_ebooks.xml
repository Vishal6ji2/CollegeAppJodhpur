<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EbooksActivity"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_3sdp">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/ebook_toolbar"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/ebook_backimg"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/arrowback"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ebooks library"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/cc_semibold"
            android:textColor="@android:color/white"
            android:gravity="center"/>

    </com.google.android.material.appbar.MaterialToolbar>

    </androidx.cardview.widget.CardView>


        <EditText
            android:id="@+id/ebook_edtsearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search ebooks"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textCursorDrawable="@drawable/cursorcolor"
            android:layout_margin="@dimen/_10sdp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ebook_recyclerview"/>

</LinearLayout>