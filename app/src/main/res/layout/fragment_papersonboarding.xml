<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.PapersonboardingFrag"
    android:orientation="vertical"
    android:weightSum="2">


    <com.airbnb.lottie.LottieAnimationView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:lottie_rawRes="@raw/booklottie"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_margin="@dimen/_20sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Books &amp; Papers"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_16ssp"
        android:gravity="center"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="you can see ebooks for every department and there are many last year papers showing facility also where students can use them "
        android:textColor="@color/colorverydarkgrey"
        android:textSize="@dimen/_12ssp"
        android:justificationMode="inter_word"
        tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>