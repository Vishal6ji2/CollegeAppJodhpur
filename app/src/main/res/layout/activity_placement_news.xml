<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PlacementNewsActivity"
    android:background="@android:color/white">


    <include
        android:id="@+id/placement_toolbar"
        layout="@layout/customtoolbarlayout"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/placement_recyclerview"
        android:layout_below="@id/placement_toolbar"
        android:layout_above="@id/placement_card"
        android:background="@color/colorlightgray"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/placement_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:layout_alignParentBottom="true">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:menu="@menu/menuitem"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>